<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="#00FFFFFF"
    android:background="@drawable/bottom_sheet_background">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:backgroundTint="#DDF2F2F2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:backgroundTint="#DDF8F8F8"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="This account will be permanently deleted from this application"
                android:textSize="12sp"
                android:textColor="#DD626161"
                android:layout_gravity="center" />
            <View
                android:id="@+id/view"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="10dp"
                android:background="#E6C5C5C5" />

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="DELETE"
                android:textColor="@color/red"
                android:backgroundTint="@android:color/white" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_sheet_background"
            android:text="Cancel"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#DD0326D7"
            android:backgroundTint="@android:color/white" />

    </LinearLayout>
