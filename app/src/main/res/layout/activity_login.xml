<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvWelcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/welcome_back"
            android:textColor="@color/blackBlue"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcomeBack"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/header_text"
            android:textColor="@color/blackBlue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeaderText"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:fontFamily="@font/font_inter"
                android:hint="@string/enter_username"
                android:textColorHint="#CFCFCF" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilUsername"
            android:gravity="center"
            app:hintEnabled="false"
            app:passwordToggleDrawable="@drawable/custom_edittext_input"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:fontFamily="@font/font_inter"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:textColorHint="#CFCFCF" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/ckbRememberAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilPassword"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/remember_account"
            android:textColor="#3F455A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_below="@+id/tilPassword"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_inter"
            android:gravity="center_vertical"
            android:text="@string/forgot_password"
            android:textColor="#3F455A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ckbRememberAccount"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_button"
            android:elevation="12dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="110dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/signInBtn"
            android:layout_marginTop="35dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/tvOrSigninWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signInBtn"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/view"
            android:fontFamily="@font/font_inter"
            android:paddingStart="14dp"
            android:text="@string/or_signin_with"
            android:textColor="#676767"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="110dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/signInBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:background="#DDDDDD" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/googleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrSigninWith"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_google"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="8dp"
            android:elevation="12dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/google"
            android:textAllCaps="false"
            android:textColor="@color/blackBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/flFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrSigninWith"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:elevation="12dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebookBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_facebook"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="8dp"
                android:fontFamily="@font/font_inter"
                android:text="@string/facebook"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flFB"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/footerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/blackBlue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:elevation="12dp"
                android:fontFamily="@font/font_inter"
                android:text="@string/sign_up"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>