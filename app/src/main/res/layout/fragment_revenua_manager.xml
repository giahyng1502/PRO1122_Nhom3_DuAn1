<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardElevation="16dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#F07070"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/renvenue_management"
            android:textStyle="bold"
            android:textColor="@color/blackBlue"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeaderText"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="Từ Ngày"
                android:inputType="none"
                android:clickable="false"

                android:paddingVertical="10dp"
                android:textColorHint="#8C8C8C"
                android:id="@+id/edtTuNgay"/>
        </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeaderText"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Đến Ngày"
                android:focusable="false"
                android:inputType="none"
                android:paddingVertical="10dp"
                android:textColorHint="#8C8C8C"
                android:id="@+id/edtDenNgay"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="@string/check"
        android:background="@drawable/custom_button_editprofile"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:id="@+id/btnCheckDoanhThu"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết Quả"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/blackBlue"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeaderText"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        app:boxBackgroundMode="none"
        app:hintEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Doanh Thu"
            android:focusable="false"
            android:inputType="none"
            android:paddingVertical="10dp"
            android:textColorHint="#8C8C8C"
            android:id="@+id/edtDoanhThu"/>
    </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
