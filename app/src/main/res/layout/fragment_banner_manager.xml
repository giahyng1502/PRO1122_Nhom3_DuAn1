<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    tools:context=".Fragment.Admin.BannerManagement">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackBlue"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Banner Management"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Banner 1"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/blackBlue"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/cardView1"
            android:layout_centerHorizontal="true">

            <!-- Hình ảnh chính của người dùng -->
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/ivbanner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner2"
                android:background="@drawable/circle_background"
                android:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Biểu tượng máy ảnh chồng lên hình ảnh người dùng -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:elevation="8dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/ivCameraIcon1"
            android:layout_margin="10dp"
            android:layout_alignBottom="@id/cardView1"
            android:layout_alignEnd="@id/cardView1"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#E6E5E5"
                android:src="@drawable/camera"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Banner 2"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/blackBlue"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/cardView"
            android:layout_centerHorizontal="true">

            <!-- Hình ảnh chính của người dùng -->
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/ivbanner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner2"
                android:background="@drawable/circle_background"
                android:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Biểu tượng máy ảnh chồng lên hình ảnh người dùng -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:elevation="8dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/ivCameraIcon2"
            android:layout_margin="10dp"
            android:layout_alignBottom="@id/cardView"
            android:layout_alignEnd="@id/cardView"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#E6E5E5"
                android:src="@drawable/camera"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Banner 3"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/blackBlue"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/cardView3"
            android:layout_centerHorizontal="true">

            <!-- Hình ảnh chính của người dùng -->
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/ivbanner3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner2"
                android:background="@drawable/circle_background"
                android:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Biểu tượng máy ảnh chồng lên hình ảnh người dùng -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:elevation="8dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/ivCameraIcon3"
            android:layout_margin="10dp"
            android:layout_alignBottom="@id/cardView3"
            android:layout_alignEnd="@id/cardView3"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#E6E5E5"
                android:src="@drawable/camera"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/btnComfirm"
        android:background="@drawable/custom_button_editprofile"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>