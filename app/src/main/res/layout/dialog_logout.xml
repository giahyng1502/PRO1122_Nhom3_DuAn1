<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_marginVertical="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/custom_dialog_sign_out"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Thoát ứng dụng"
            android:textAlignment="center"
            android:textColor="@color/blackBlue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Bạn có muốn thoát ứng dụng không?"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesBtn"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Vâng, tôi muốn"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noBtn"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Không, cảm ơn"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/yellow"
            android:background="#00000000"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>