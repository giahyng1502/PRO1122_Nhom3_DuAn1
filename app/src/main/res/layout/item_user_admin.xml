<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/itemUser"
    app:cardElevation="4dp"
    android:layout_height="140dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/ivAvatarUserManagement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/none_avatar" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:paddingVertical="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:text="Hoang Van Hung"
                android:textSize="14sp"
                android:id="@+id/tvUserManagementName"
                android:fontFamily="@font/font_inter"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/blackBlue"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="hungcy"
                android:id="@+id/tvUserManagemenUserID"
                android:textSize="13sp"
                android:fontFamily="@font/font_inter"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/blackBlue"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="hungcy"
                android:id="@+id/tvUserManagementPassWord"
                android:textSize="13sp"
                android:fontFamily="@font/font_inter"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/blackBlue"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvUserManagementEmail"
                android:text="Hungcy1502@gmail.com"
                android:textSize="13sp"
                android:fontFamily="@font/font_inter"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="#999999"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvUserManagementPhone"
                android:text="0963594828"
                android:textSize="13sp"
                android:fontFamily="@font/font_inter"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/blackBlue"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Ngoc Chau Tan Yen Bac Giang"
                android:id="@+id/tvUserManagementAddress"
                android:textSize="13sp"
                android:fontFamily="@font/font_inter"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/blackBlue"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>